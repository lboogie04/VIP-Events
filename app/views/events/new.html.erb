<h1>New Event</h1>


<div class="row">
 <div class="col-md-6 col-md-offset-3">
  <%= form_for(@event) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :location %>
  <%= f.text_field :location, class: 'form-control' %>
  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>
  <%= f.submit "Create Event", class: "btn btn-primary" %>
  <% end %>
 </div>
</div>

