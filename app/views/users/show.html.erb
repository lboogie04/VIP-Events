<div class="uk-container">
<div class= "title"><br />
 <h2><%= @user.name %>'s Events</h2><br><br>
</div>

<%= link_to 'Create Event', new_event_path, class: 'uk-button uk-button-primary' %>
<br /><br />

<% @user.events.each do |f| %>
<br />
<div class="uk-card uk-card-default uk-card-hover">
  <div class="card-block">
    <h4 class="uk-card-title"><%= f.title %></h4>
    <p><%= f.description %></p>
    <%= link_to 'Go to event', event_path %>
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>
<br />
<% end %>
 
 </div>
